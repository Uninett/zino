# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
max_line_length = 120

[*.html]
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = ignore

[Makefile]
indent_style = tab

[docs/**.txt]
max_line_length = 79

[docs/**.rst]
max_line_length = 79

[*.yml]
indent_size = 2
